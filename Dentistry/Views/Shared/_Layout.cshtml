<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dentistry</title>
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PatientCatalog.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="container">
            <div class="left-div">
                <button class="btn" onclick="redirectFunc()">Добавить нового пациента</button>
            </div>
            <script>
                function redirectFunc() {
                    window.location.href = '/PatientAddition';
                }
            </script>
            <div class="right-div">
                <input type="text" class="search-input" placeholder="Search...">
            </div>
        </div>
        </header>
        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
</body>
</html>
